
  <% content_for :title, "Checklist" %>
  <h1 id="title"> My Checklist </h1>
  <%= link_to new_checklist_path, :id => 'add_new', :class => 'btn btn-link' do%>
    <span class="glyphicon glyphicon-plus"></span>  
    Add Checklist
  <% end %>
  <hr>
  <% if @checklists.size > 0 %>
    <div class="col-lg-12" style="padding:0px">
    <% @checklists.each_with_index do |checklist,i| %>
      <div class="col-lg-4" style="padding:0px">
          <div class="rectangle_list">
            <div class="rectangle-container" style="width:300px; height:100px">
              <div class="main-content">
                <div class="col-lg-12" style="padding:0px">
                  <div class="pull-right" style="padding-top:3px">
                    <%= link_to edit_checklist_path(checklist), :class => 'icons-link' do%>
                       <span class="icons glyphicon glyphicon-pencil"></span>
                    <% end %>
                    <%= link_to checklist_path(checklist), method: :delete, data: {confirm: 'Are you sure' }, :class => 'icons-link' do%>
                       <span class="icons glyphicon glyphicon-remove"></span>
                    <% end %>
                  </div>
                  <%= link_to checklist.title, checklist_path(checklist), :class => 'content'%>               
                </div>
              </div>
            </div>
          </div>
      </div>

      <% if (i+1)%3==0 %>
        </div>
        <div class="col-lg-12" style="padding:0px">
      <% end %>
    <% end %>

    </table>
  <% else %>
    <h3> There are no checklists </h3>
  <% end %>

