<% content_for :title, "Home" %>
<h1> Checklists </h1>

<%= link_to "New Checklist", new_checklist_path %>

<% if @checklists %>
  <% @checklists.each do |checklist| %>
    <h3> <%= link_to checklist.title, checklist_path(checklist) %> </h3>
  <% end %>
<% else %>
  <h3> There are no checklists. </h3>
<% end %>
