<div class="col-lg-12">
  <%= form_for @checklist, html: {role: "form"} do |checklist| %>
    <div class="form-group">      
    <%= checklist.text_field :title, class: 'form-control', placeholder: 'Enter Title'%>
    </div>
    <div class="form-group"> 
      <%= checklist.text_area :description, class: 'form-control', placeholder: 'Enter description'  %> 
       
    </div>
      
  <div class="pull-right" style="margin-right:100px">  
    <%= checklist.button :Save, :class => 'btn btn-primary', :id => 'save'%>
  </div>     
  <% end %>
</div>